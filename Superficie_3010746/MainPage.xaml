<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Superficie_3010746.MainPage">

    <ScrollView>
        <VerticalStackLayout
         Spacing="25"
         Padding="30,0"
         VerticalOptions="Center">

         
            <Image Source="superficie.png" 
                HeightRequest="200"
                WidthRequest="300"
                HorizontalOptions="Center"/>

            <Label Text="Digite base del triangulo"
                FontSize="15"/>
            <Entry x:Name="baseTri" Placeholder="Base"
                 Keyboard="Numeric"/>

            <Label Text="Digite la altura de el triangulo"
                FontSize="15"/>
            <Entry x:Name="altTri" Placeholder="Altura"
                Keyboard="Numeric"/>

            <Label Text="La superficie es: "
                HorizontalOptions="Start"
                FontAttributes="Bold"
                FontSize="18"
                TextColor="MediumBlue"
                x:Name="supTri"/>

            <Button Text="Calcular Superficie"
                 BackgroundColor="White"
                 BorderWidth="3"
                 Clicked="Button_Clicked"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
